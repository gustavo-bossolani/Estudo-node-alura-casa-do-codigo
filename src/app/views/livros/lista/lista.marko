<html>
    <head>
        <meta charset="utf-8">
    </head>
    <body>
        <h1> Listagem de livros </h1>

        <table>
            <tr>
                <td>ID</td>
                <td>Título</td>
                <td>Preço</td>
                <td>Descrição</td>
            </tr>
            <tr for(livro in data.livros)>
                <td>${ livro.id }</td>
                <td>${ livro.titulo }</td>
                <td>${ livro.preco }</td>
                <td>${ livro.descricao }</td>
            </tr>
        </table> 
        <a href="/">voltar para Home</a>
    </body> 
</html>