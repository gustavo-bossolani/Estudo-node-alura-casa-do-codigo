<html>
    <body>
        <h1>Cadastro de livros</h1>

        <form action="/livros" method="post">

            <input type="hidden" id="id" name="id" />

            <div>
                <label for="titulo">Titulo:</label><br>
                <input type="text" id="titulo" name="titulo" placeholder="coloque o titulo" />
            </div>
            <div>
                <label for="preco">Preço:</label><br>
                <input type="text" id="preco" name="preco" placeholder="123.45$" />
            </div>
            <div>
                <label for="descricao">Descrição:</label><br>
                <textarea cols="20" rows="10"  id="descricao" name="descricao" placeholder="Descrição do livro"></textarea>
            </div>

            <input type="submit" value="Salvar" />
        </form>
    </body>
</html>